<%- include("../partials/header") %>

<link rel="stylesheet" href="css/style.temp2.css">
</head>
<body>

    <nav class="nav-bar">
        <div class="headerName">
            <h2><a href="/"> Resume Maker</a></h2>
        </div>
    </nav>

    <div id="resume2" class="resume">
        <div class="header p-5 text-uppercase">
            <h1 class="mb-3"><%= contactInfo[0]%> <%= contactInfo[1]%></h1>
            <hr>
            <p class="mt-3"> <%= obj[0]%></p>
        </div>
        
        <div class="body d-flex py-4 px-5">

            <div class="main-section">

                <hr>
                <div class="obj py-4">
                    <h2 class="title">objective</h2>
                    <p class="desc"> <%= obj[1] %> </p>
                </div>

                <hr>

                <div class="internship pt-4">
                    <h2 class="title">Internship</h2>
                    <div class="mt-3">
                                
                        <%internship.forEach(ele =>{ %>
                            <div class="internship-details mb-4">
                                <p class="fw-bold"><%= ele.title%></p>
                                <p class="d-inline date"><%= ele.name%></p> 
                                <p class="d-inline"> |</p>
                                <p class="date d-inline"><%= ele.start%> - <%= ele.end%></p>
                                <p class="internship-about desc">
                                    <%= ele.desc%>
                                </p>
                            </div>
                        <% }) %>
                                
                    </div>
                </div>

                <hr>

                <div class="skills py-4">
                    <h2 class="title">Skills</h2>
                    <div class="mt-3">
                        <table cellspacing="4">
                            <% for(let i=0; i<skills.length; i+=3){ %>
                                <tr>
                                    <td><%= skills[i]%></td>
                                    <td><%= skills[i+1]%></td>
                                    <td><%= skills[i+2]%></td>       
                                </tr>
                            <% } %>

                        </table>
                    </div>
                </div>

            </div>

            <div class="side-section me-4 pe-4">
                <hr>

                <div class="contact py-4">
                    <h2 class="title">Contact</h2>
                    <div class="contact-details my-2">
                        <div class="d-flex">
                            <i class="fas fa-phone-alt"></i>
                            <p class="side-desc ps-2">+91 <%= contactInfo[3]%></p>
                        </div>
                        <div class="d-flex">
                            <i class="far fa-envelope"></i>
                            <p class="side-desc ps-2"><%= contactInfo[2]%></p>
                        </div>
                        <div class="d-flex">
                            <i class="fab fa-linkedin"></i>
                            <p class="side-desc ps-2"> <%= contactInfo[5]%></p>
                        </div>
                        <div class="d-flex">
                            <i class="fas fa-map-marker-alt"></i>
                            <p class="side-desc ps-2"><%= contactInfo[4]%> </p>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="education py-4">
                    <h2 class="title ">Education</h2>
                    <div class="my-2">

                        <% edu.forEach(eduDetail =>{ %>
                            <div class="edu-details side-desc my-3">
                                <p class="fw-bold pt-1"><%= eduDetail.degree%>, <%= eduDetail.course%></p>
                                <p class="name"><%= eduDetail.name%></p>
                                <ul class="date side-desc pt-1">
                                    <li>Year of completion: <%= eduDetail.complete%></li>
                                    <li>CGPA/Percentage: <%= eduDetail.marks%></li>
                                </ul>
                            </div>
                        <% }) %>

                    </div>
                </div>
            </div>

        </div>

        <div class="footer"></div>

    </div>

    <button class="my-5 mx-auto d-block btn btn-lg download" onclick="genPDF2()">Download Resume</button>

    <script src="js/pdf.js"></script>
</body>
</html>